{
  "name": "migratejs-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build-clean": "rm -rf ./packages/*/build ./packages/*/tsconfig.tsbuildinfo",
    "clean": "yarn build-clean && rm -rf ./packages/*/node_modules && rm -rf ./node_modules",
    "watch": "yarn tsc -b --watch --incremental packages/migratejs/tsconfig.prod.json",
    "build": "yarn tsc -b packages/migratejs/tsconfig.prod.json",
    "lint": "eslint .",
    "test": "jest"
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "eslint": "^7.13.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "@types/node": "^14.14.8",
    "@types/jest": "^26.0.15",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1"
  }
}
